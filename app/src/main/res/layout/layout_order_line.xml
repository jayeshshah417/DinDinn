<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_2dp"
    android:background="@color/light_gray"
    android:orientation="vertical">
    <RelativeLayout
        android:padding="@dimen/default_4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"/>

        <TextView
            android:id="@+id/tv_order_expired"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_notify"
            android:layout_toRightOf="@id/tv_order_id"
            android:layout_toLeftOf="@id/tv_order_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_doorbell_24"/>
    </RelativeLayout>

    <RelativeLayout
        android:padding="@dimen/default_4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_order_time"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_5"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_4"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_gray"
                android:layout_marginRight="@dimen/default_2dp"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_white"
                android:layout_marginRight="@dimen/default_2dp"/>
            <ImageView
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pills_red"
                android:layout_marginRight="@dimen/default_2dp"/>

        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <Button
            android:layout_margin="@dimen/default_2dp"
            android:layout_gravity="right"
            android:id="@+id/bt_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/teal_700"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:text="Accept"/>
        <Button
            android:layout_margin="@dimen/default_2dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:id="@+id/bt_expired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small"
            android:text="Expired"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>